<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shapes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
        android:id="@+id/btnCi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/circle"
        android:padding="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Area / Parimeter (Circle)"
        android:onClick="cir"
        android:textSize="25sp"
        android:textStyle="bold">
    </Button>



    <Button
        android:id="@+id/btnSq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/square"
        android:padding="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Area / Parimeter (Square)"
        android:onClick="sq"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/rectangle"
        android:padding="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Area / Parimeter (Rectangle)"
        android:onClick="rec"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/triangle"
        android:padding="25dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:text="Area / Parimeter (Triangle)"
        android:onClick="tria"
        android:textSize="25sp"
        android:textStyle="bold" />

    </LinearLayout>
</ScrollView>